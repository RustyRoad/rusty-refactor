{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "compile",
			"problemMatcher": "$tsc",
			"group": "build"
		},
		{
			"label": "Publish Extension",
			"type": "shell",
			"command": "npx -y @vscode/vsce publish",
			"group": "build"
		}
	]
}